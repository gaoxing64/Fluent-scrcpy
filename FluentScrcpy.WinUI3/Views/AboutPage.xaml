<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FluentScrcpy.WinUI3.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:resources="using:FluentScrcpy.WinUI3.Resources"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- 设置卡片样式 -->
        <Style x:Key="SettingCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <!-- 标题样式 -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,24,0,8"/>
        </Style>
        
        <!-- 超链接样式 -->
        <Style x:Key="GitHubLinkStyle" TargetType="HyperlinkButton">
            <Setter Property="Foreground" Value="{ThemeResource HyperlinkButtonForeground}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </Page.Resources>

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 页面标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <TextBlock
                x:Name="PageTitleTextBlock"
                Text="关于"
                Style="{StaticResource TitleTextBlockStyle}"
                FontWeight="SemiBold"/>
            <TextBlock
                x:Name="PageSubtitleTextBlock"
                Style="{StaticResource CaptionTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="应用信息和使用的开源库"/>
        </StackPanel>

        <!-- 主要内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="0">
                <!-- 应用信息卡片 -->
                <Border Style="{StaticResource SettingCardStyle}">
                    <StackPanel Padding="20">
                        <TextBlock
                            Text="应用信息"
                            Style="{StaticResource HeadlineTextBlockStyle}"
                            Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 应用图标 -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <Border
                                    Width="80"
                                    Height="80"
                                    CornerRadius="16"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}">
                                    <TextBlock
                                        Text="FS"
                                        FontSize="32"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                            
                            <!-- 应用详情 -->
                            <StackPanel Grid.Column="1">
                                <TextBlock
                                    x:Name="AppNameTextBlock"
                                    Text="Fluent Scrcpy"
                                    Style="{StaticResource TitleTextBlockStyle}"
                                    FontWeight="SemiBold"/>
                                <TextBlock
                                    x:Name="AppVersionTextBlock"
                                    Text="版本 1.0.0"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Margin="0,4,0,0"/>
                                <TextBlock
                                    x:Name="AppDescriptionTextBlock"
                                    Text="一个基于 Scrcpy 的现代化 Android 屏幕镜像工具，提供流畅的远程控制体验。"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Margin="0,12,0,0"
                                    TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 开源库部分 -->
                <TextBlock
                    Text="使用的开源库"
                    Style="{StaticResource SectionTitleStyle}"/>
                
                <!-- 核心库卡片 -->
                <Border Style="{StaticResource SettingCardStyle}">
                    <StackPanel Padding="20">
                        <TextBlock
                            Text="核心库"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Margin="0,0,0,12"/>
                        
                        <StackPanel>
                            <HyperlinkButton
                                x:Name="ScrcpyLink"
                                Content="Scrcpy"
                                Style="{StaticResource GitHubLinkStyle}"
                                Click="ScrcpyLink_Click"/>
                            <TextBlock
                                Text="由 Genymobile 开发的核心屏幕镜像功能"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                Margin="0,0,0,8"/>
                            
                            <HyperlinkButton
                                x:Name="WinUILink"
                                Content="WinUI 3"
                                Style="{StaticResource GitHubLinkStyle}"
                                Click="WinUILink_Click"/>
                            <TextBlock
                                Text="Microsoft 的现代 Windows UI 框架"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                Margin="0,0,0,8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 工具库卡片 -->
                <Border Style="{StaticResource SettingCardStyle}">
                    <StackPanel Padding="20">
                        <TextBlock
                            Text="工具库"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Margin="0,0,0,12"/>
                        
                        <StackPanel>
                            <HyperlinkButton
                                x:Name="CommunityToolkitLink"
                                Content="Community Toolkit"
                                Style="{StaticResource GitHubLinkStyle}"
                                Click="CommunityToolkitLink_Click"/>
                            <TextBlock
                                Text="Microsoft 开发的 .NET 工具包，提供 MVVM 等功能"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                Margin="0,0,0,8"/>
                            
                            <HyperlinkButton
                                x:Name="ColorCodeLink"
                                Content="ColorCode"
                                Style="{StaticResource GitHubLinkStyle}"
                                Click="ColorCodeLink_Click"/>
                            <TextBlock
                                Text="代码语法高亮库"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                Margin="0,0,0,8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 法律信息卡片 -->
                <Border Style="{StaticResource SettingCardStyle}">
                    <StackPanel Padding="20">
                        <TextBlock
                            Text="法律信息"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Margin="0,0,0,12"/>
                        
                        <TextBlock
                            Text="本应用基于开源软件构建，遵循相关开源协议。"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- 版权信息 -->
                <TextBlock
                    Text="© 2024 Fluent Scrcpy 团队"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    HorizontalAlignment="Center"
                    Margin="0,32,0,16"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>