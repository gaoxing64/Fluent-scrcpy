<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FluentScrcpy.WinUI3.Views.ConfigPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.Resources>
        <!-- 设置卡片样式 -->
        <Style x:Key="SettingCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <!-- 导航菜单项样式 -->
        <Style x:Key="NavigationItemStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- 选中状态边框 -->
                            <Border x:Name="SelectionBorder"
                                    Background="Transparent"
                                    BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    Opacity="0"/>
                            <!-- 内容容器 -->
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              ContentTransitions="{TemplateBinding ContentTransitions}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Padding="{TemplateBinding Padding}"
                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                              AutomationProperties.AccessibilityView="Raw"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航菜单 -->
        <Border Grid.Column="0" Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}" BorderThickness="0,0,1,0" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}">
            <StackPanel>
                <!-- 页面标题 -->
                <StackPanel Margin="24,24,24,16">
                    <TextBlock
                        x:Name="DeviceModelTextBlock"
                        Text="配置"
                        Style="{StaticResource TitleTextBlockStyle}"
                        FontWeight="SemiBold"/>
                    <TextBlock
                        x:Name="DeviceSerialTextBlock"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <!-- 导航菜单项 -->
                <Grid>
                    <!-- 选中状态边框 -->
                    <Border x:Name="NavVideoSettingsSelectionBorder"
                            Background="Transparent"
                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Margin="8,2"
                            Opacity="0"
                            IsHitTestVisible="False"/>
                    <Button x:Name="NavVideoSettings" Tag="Video" Style="{StaticResource NavigationItemStyle}" Click="NavigationItem_Click">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE714;" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text="视频设置" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid>
                    <Border x:Name="NavAudioSettingsSelectionBorder"
                            Background="Transparent"
                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Margin="8,2"
                            Opacity="0"
                            IsHitTestVisible="False"/>
                    <Button x:Name="NavAudioSettings" Tag="Audio" Style="{StaticResource NavigationItemStyle}" Click="NavigationItem_Click">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE767;" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text="音频设置" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid>
                    <Border x:Name="NavControlSettingsSelectionBorder"
                            Background="Transparent"
                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Margin="8,2"
                            Opacity="0"
                            IsHitTestVisible="False"/>
                    <Button x:Name="NavControlSettings" Tag="Control" Style="{StaticResource NavigationItemStyle}" Click="NavigationItem_Click">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE7FC;" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text="控制设置" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid>
                    <Border x:Name="NavWindowSettingsSelectionBorder"
                            Background="Transparent"
                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Margin="8,2"
                            Opacity="0"
                            IsHitTestVisible="False"/>
                    <Button x:Name="NavWindowSettings" Tag="Window" Style="{StaticResource NavigationItemStyle}" Click="NavigationItem_Click">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE737;" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text="窗口设置" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid>
                    <Border x:Name="NavRecordSettingsSelectionBorder"
                            Background="Transparent"
                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Margin="8,2"
                            Opacity="0"
                            IsHitTestVisible="False"/>
                    <Button x:Name="NavRecordSettings" Tag="Record" Style="{StaticResource NavigationItemStyle}" Click="NavigationItem_Click">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE7C3;" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text="录制设置" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid>
                    <Border x:Name="NavOtherSettingsSelectionBorder"
                            Background="Transparent"
                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Margin="8,2"
                            Opacity="0"
                            IsHitTestVisible="False"/>
                    <Button x:Name="NavOtherSettings" Tag="Other" Style="{StaticResource NavigationItemStyle}" Click="NavigationItem_Click">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE713;" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text="其他设置" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 右侧内容区域 -->
        <ScrollViewer Grid.Column="1" Padding="24">
            <StackPanel Spacing="8">
                <!-- 视频设置 -->
                <Border x:Name="VideoSettingsSection" Style="{StaticResource SettingCardStyle}" Visibility="Visible">
                    <StackPanel>
                        <Button
                            x:Name="VideoHeaderButton"
                            Click="VideoHeaderButton_Click"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="16">
                            <Grid HorizontalAlignment="Stretch" Width="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Grid.Column="0"
                                    Glyph="&#xE714;"
                                    FontSize="20"
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="视频设置" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock
                                        x:Name="VideoCurrentValue"
                                        Text="H.264, 原生"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        FontSize="12"/>
                                </StackPanel>
                                <FontIcon
                                    x:Name="VideoArrowIcon"
                                    Grid.Column="3"
                                    Glyph="&#xE70D;"
                                    FontSize="12"
                                    VerticalAlignment="Center"
                                    Margin="8,0,0,0">
                                    <FontIcon.RenderTransform>
                                        <RotateTransform x:Name="VideoArrowRotate" Angle="0" CenterX="6" CenterY="6"/>
                                    </FontIcon.RenderTransform>
                                </FontIcon>
                            </Grid>
                        </Button>
                        <StackPanel x:Name="VideoOptionsPanel" Padding="16,0,16,16" Spacing="16"
                                    Opacity="1" Visibility="Visible">
                            <Slider
                                x:Name="BitrateSlider"
                                Header="码率 (Mbps)"
                                Minimum="1"
                                Maximum="50"
                                Value="8"
                                StepFrequency="1"/>
                            <ComboBox
                                x:Name="ResolutionComboBox"
                                Header="最大分辨率"
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch"
                                SelectionChanged="ResolutionComboBox_SelectionChanged">
                                <ComboBoxItem Content="原生 (0)"/>
                                <ComboBoxItem Content="2560x1440 (2K)"/>
                                <ComboBoxItem Content="1920x1080 (1080p)"/>
                                <ComboBoxItem Content="1600x900"/>
                                <ComboBoxItem Content="1280x720 (720p)"/>
                                <ComboBoxItem Content="854x480 (480p)"/>
                                <ComboBoxItem Content="640x360"/>
                            </ComboBox>
                            <Slider
                                x:Name="FpsSlider"
                                Header="最大帧率 (FPS)"
                                Minimum="0"
                                Maximum="120"
                                Value="0"
                                StepFrequency="5"/>
                            <TextBlock
                                Text="0 = 自动"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <ComboBox
                                x:Name="VideoCodecComboBox"
                                Header="视频编码器"
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch"
                                SelectionChanged="VideoCodecComboBox_SelectionChanged">
                                <ComboBoxItem Content="H.264 (默认)"/>
                                <ComboBoxItem Content="H.265 / HEVC"/>
                                <ComboBoxItem Content="AV1"/>
                            </ComboBox>
                            <ComboBox
                                x:Name="VideoSourceComboBox"
                                Header="视频源"
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="屏幕"/>
                                <ComboBoxItem Content="摄像头"/>
                            </ComboBox>
                            <ComboBox
                                x:Name="RotationComboBox"
                                Header="显示方向"
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="0° (默认)"/>
                                <ComboBoxItem Content="90°"/>
                                <ComboBoxItem Content="180°"/>
                                <ComboBoxItem Content="270°"/>
                            </ComboBox>
                            <Slider
                                x:Name="DisplayBufferSlider"
                                Header="显示缓冲 (ms)"
                                Minimum="0"
                                Maximum="1000"
                                Value="0"
                                StepFrequency="50"/>
                            <TextBox
                                x:Name="CropTextBox"
                                Header="裁剪区域 (宽:高:x:y)"
                                PlaceholderText="例如: 1224:1440:0:0"
                                Text=""/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 音频设置 -->
                <Border x:Name="AudioSettingsSection" Style="{StaticResource SettingCardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <Grid Padding="16" Tapped="AudioHeaderGrid_Tapped">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Glyph="&#xE767;"
                                FontSize="20"
                                Margin="0,0,16,0"
                                VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="音频设置" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock
                                    x:Name="AudioCurrentValue"
                                    Text="Opus"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    FontSize="12"/>
                            </StackPanel>
                            <ToggleSwitch
                                x:Name="EnableAudioToggle"
                                Grid.Column="2"
                                Toggled="EnableAudioToggle_Toggled"/>
                            <FontIcon
                                x:Name="AudioArrowIcon"
                                Grid.Column="3"
                                Glyph="&#xE70D;"
                                FontSize="12"
                                VerticalAlignment="Center"
                                Margin="8,0,0,0">
                                <FontIcon.RenderTransform>
                                    <RotateTransform x:Name="AudioArrowRotate" Angle="0" CenterX="6" CenterY="6"/>
                                </FontIcon.RenderTransform>
                            </FontIcon>
                        </Grid>
                        <StackPanel x:Name="AudioOptionsPanel" Padding="16,0,16,16" Spacing="16"
                                    Opacity="1" Visibility="Visible">
                            <ComboBox
                                x:Name="AudioCodecComboBox"
                                Header="音频编码器"
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch"
                                SelectionChanged="AudioCodecComboBox_SelectionChanged">
                                <ComboBoxItem Content="Opus (默认)"/>
                                <ComboBoxItem Content="AAC"/>
                                <ComboBoxItem Content="FLAC"/>
                                <ComboBoxItem Content="Raw PCM"/>
                            </ComboBox>
                            <ComboBox
                                x:Name="AudioSourceComboBox"
                                Header="音频源"
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="输出 (Output)"/>
                                <ComboBoxItem Content="播放 (Playback)"/>
                            </ComboBox>
                            <Slider
                                x:Name="AudioBufferSlider"
                                Header="音频缓冲 (ms)"
                                Minimum="0"
                                Maximum="500"
                                Value="50"
                                StepFrequency="10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 控制设置 -->
                <Border x:Name="ControlSettingsSection" Style="{StaticResource SettingCardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <Button
                            x:Name="ControlHeaderButton"
                            Click="ControlHeaderButton_Click"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="16">
                            <Grid HorizontalAlignment="Stretch" Width="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Grid.Column="0"
                                    Glyph="&#xE7FC;"
                                    FontSize="20"
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="控制设置" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock
                                        x:Name="ControlCurrentValue"
                                        Text="默认"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        FontSize="12"/>
                                </StackPanel>
                                <FontIcon
                                    x:Name="ControlArrowIcon"
                                    Grid.Column="3"
                                    Glyph="&#xE70D;"
                                    FontSize="12"
                                    VerticalAlignment="Center"
                                    Margin="8,0,0,0">
                                    <FontIcon.RenderTransform>
                                        <RotateTransform x:Name="ControlArrowRotate" Angle="0" CenterX="6" CenterY="6"/>
                                    </FontIcon.RenderTransform>
                                </FontIcon>
                            </Grid>
                        </Button>
                        <StackPanel x:Name="ControlOptionsPanel" Padding="16,0,16,16" Spacing="16"
                                    Opacity="1" Visibility="Visible">
                            <ToggleSwitch
                                x:Name="TurnScreenOffToggle"
                                Header="连接时关闭设备屏幕"
                                Toggled="ControlToggle_Toggled"/>
                            <ToggleSwitch
                                x:Name="StayAwakeToggle"
                                Header="保持设备唤醒"
                                Toggled="ControlToggle_Toggled"/>
                            <ToggleSwitch
                                x:Name="ShowTouchesToggle"
                                Header="显示触摸点"
                                Toggled="ControlToggle_Toggled"/>
                            <ToggleSwitch
                                x:Name="DisableControlToggle"
                                Header="禁用控制 (仅查看)"
                                Toggled="ControlToggle_Toggled"/>
                            <ComboBox
                                x:Name="KeyboardModeComboBox"
                                Header="键盘模式"
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch"
                                SelectionChanged="ControlComboBox_SelectionChanged">
                                <ComboBoxItem Content="UHID (默认)"/>
                                <ComboBoxItem Content="AOA"/>
                                <ComboBoxItem Content="HID"/>
                            </ComboBox>
                            <ComboBox
                                x:Name="MouseModeComboBox"
                                Header="鼠标模式"
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch"
                                SelectionChanged="ControlComboBox_SelectionChanged">
                                <ComboBoxItem Content="UHID (默认)"/>
                                <ComboBoxItem Content="AOA"/>
                                <ComboBoxItem Content="HID"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 窗口设置 -->
                <Border x:Name="WindowSettingsSection" Style="{StaticResource SettingCardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <Button
                            x:Name="WindowHeaderButton"
                            Click="WindowHeaderButton_Click"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="16">
                            <Grid HorizontalAlignment="Stretch" Width="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Grid.Column="0"
                                    Glyph="&#xE737;"
                                    FontSize="20"
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="窗口设置" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock
                                        x:Name="WindowCurrentValue"
                                        Text="默认"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        FontSize="12"/>
                                </StackPanel>
                                <FontIcon
                                    x:Name="WindowArrowIcon"
                                    Grid.Column="3"
                                    Glyph="&#xE70D;"
                                    FontSize="12"
                                    VerticalAlignment="Center"
                                    Margin="8,0,0,0">
                                    <FontIcon.RenderTransform>
                                        <RotateTransform x:Name="WindowArrowRotate" Angle="0" CenterX="6" CenterY="6"/>
                                    </FontIcon.RenderTransform>
                                </FontIcon>
                            </Grid>
                        </Button>
                        <StackPanel x:Name="WindowOptionsPanel" Padding="16,0,16,16" Spacing="16"
                                    Opacity="1" Visibility="Visible">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ToggleSwitch
                                    x:Name="FullscreenToggle"
                                    Grid.Column="0"
                                    Header="默认全屏"
                                    Toggled="WindowToggle_Toggled"/>
                                <FontIcon
                                    Grid.Column="1"
                                    Glyph="&#xE946;"
                                    FontSize="16"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    ToolTipService.ToolTip="快捷键: Alt+F 或 Alt+Enter"
                                    VerticalAlignment="Center"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ToggleSwitch
                                    x:Name="AlwaysOnTopToggle"
                                    Grid.Column="0"
                                    Header="默认置顶"
                                    Toggled="WindowToggle_Toggled"/>
                                <FontIcon
                                    Grid.Column="1"
                                    Glyph="&#xE946;"
                                    FontSize="16"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    ToolTipService.ToolTip="快捷键: Alt+T"
                                    VerticalAlignment="Center"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ToggleSwitch
                                    x:Name="BorderlessToggle"
                                    Grid.Column="0"
                                    Header="默认无边框"
                                    Toggled="WindowToggle_Toggled"/>
                                <FontIcon
                                    Grid.Column="1"
                                    Glyph="&#xE946;"
                                    FontSize="16"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    ToolTipService.ToolTip="快捷键: Alt+X"
                                    VerticalAlignment="Center"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ToggleSwitch
                                    x:Name="LockAspectRatioToggle"
                                    Grid.Column="0"
                                    Header="锁定纵横比"
                                    Toggled="WindowToggle_Toggled"/>
                                <FontIcon
                                    Grid.Column="1"
                                    Glyph="&#xE946;"
                                    FontSize="16"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    ToolTipService.ToolTip="快捷键: Alt+G"
                                    VerticalAlignment="Center"/>
                            </Grid>
                            <TextBox
                                x:Name="WindowTitleTextBox"
                                Header="窗口标题"
                                PlaceholderText="留空使用设备名称"
                                Text=""/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <NumberBox
                                    x:Name="WindowXNumberBox"
                                    Grid.Column="0"
                                    Header="X 位置"
                                    PlaceholderText="自动"
                                    SpinButtonPlacementMode="Inline"/>
                                <NumberBox
                                    x:Name="WindowYNumberBox"
                                    Grid.Column="2"
                                    Header="Y 位置"
                                    PlaceholderText="自动"
                                    SpinButtonPlacementMode="Inline"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <NumberBox
                                    x:Name="WindowWidthNumberBox"
                                    Grid.Column="0"
                                    Header="宽度"
                                    PlaceholderText="自动"
                                    SpinButtonPlacementMode="Inline"/>
                                <NumberBox
                                    x:Name="WindowHeightNumberBox"
                                    Grid.Column="2"
                                    Header="高度"
                                    PlaceholderText="自动"
                                    SpinButtonPlacementMode="Inline"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 录制设置 -->
                <Border x:Name="RecordSettingsSection" Style="{StaticResource SettingCardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <Grid Padding="16" Tapped="RecordHeaderGrid_Tapped">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Glyph="&#xE7C3;"
                                FontSize="20"
                                Margin="0,0,16,0"
                                VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="录制设置" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock
                                    x:Name="RecordCurrentValue"
                                    Text="MP4"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    FontSize="12"/>
                            </StackPanel>
                            <ToggleSwitch
                                x:Name="EnableRecordingToggle"
                                Grid.Column="2"
                                Toggled="EnableRecordingToggle_Toggled"/>
                            <FontIcon
                                x:Name="RecordArrowIcon"
                                Grid.Column="3"
                                Glyph="&#xE70D;"
                                FontSize="12"
                                VerticalAlignment="Center"
                                Margin="8,0,0,0">
                                <FontIcon.RenderTransform>
                                    <RotateTransform x:Name="RecordArrowRotate" Angle="0" CenterX="6" CenterY="6"/>
                                </FontIcon.RenderTransform>
                            </FontIcon>
                        </Grid>
                        <StackPanel x:Name="RecordOptionsPanel" Padding="16,0,16,16" Spacing="16"
                                    Opacity="1" Visibility="Visible">
                            <TextBox
                                x:Name="RecordPathTextBox"
                                Header="录制路径"
                                PlaceholderText="选择保存位置..."
                                Text=""/>
                            <ComboBox
                                x:Name="RecordFormatComboBox"
                                Header="录制格式"
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch"
                                SelectionChanged="RecordFormatComboBox_SelectionChanged">
                                <ComboBoxItem Content="MP4"/>
                                <ComboBoxItem Content="MKV"/>
                            </ComboBox>
                            <Border
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="12">
                                <TextBlock
                                    Text="录制快捷键: Ctrl+R"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 其他设置 -->
                <Border x:Name="OtherSettingsSection" Style="{StaticResource SettingCardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <Button
                            x:Name="OtherHeaderButton"
                            Click="OtherHeaderButton_Click"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="16">
                            <Grid HorizontalAlignment="Stretch" Width="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Grid.Column="0"
                                    Glyph="&#xE713;"
                                    FontSize="20"
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="其他设置" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock
                                        x:Name="OtherCurrentValue"
                                        Text="快捷键"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        FontSize="12"/>
                                </StackPanel>
                                <FontIcon
                                    x:Name="OtherArrowIcon"
                                    Grid.Column="3"
                                    Glyph="&#xE70D;"
                                    FontSize="12"
                                    VerticalAlignment="Center"
                                    Margin="8,0,0,0">
                                    <FontIcon.RenderTransform>
                                        <RotateTransform x:Name="OtherArrowRotate" Angle="0" CenterX="6" CenterY="6"/>
                                    </FontIcon.RenderTransform>
                                </FontIcon>
                            </Grid>
                        </Button>
                        <StackPanel x:Name="OtherOptionsPanel" Padding="16,0,16,16" Spacing="16"
                                    Opacity="1" Visibility="Visible">
                            <ToggleSwitch
                                x:Name="DisableScreensaverToggle"
                                Header="禁用屏保"/>
                            <ToggleSwitch
                                x:Name="PowerOffOnCloseToggle"
                                Header="断开连接时关闭设备屏幕"/>
                            <Border
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="16">
                                <StackPanel Spacing="12">
                                    <TextBlock
                                        Text="常用快捷键"
                                        Style="{StaticResource SubtitleTextBlockStyle}"
                                        FontSize="14"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Alt+F / Alt+Enter" Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="切换全屏" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Alt+T" Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="切换置顶" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Alt+X" Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="切换无边框" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Alt+G" Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="切换纵横比锁定" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Ctrl+r" Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="开始/停止录制" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Ctrl+s" Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="截图" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,8,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 保存按钮 -->
                <Button
                    x:Name="SaveButton"
                    Content="保存配置"
                    Click="SaveButton_Click"
                    HorizontalAlignment="Stretch"
                    Style="{StaticResource AccentButtonStyle}"
                    Margin="0,16,0,0"
                    Height="40"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
